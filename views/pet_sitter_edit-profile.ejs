<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>
        <%= title %>
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link href="/tailwind/output.css" rel="stylesheet" />
    <link rel="icon" sizes="16x16" href="/images/pawstay-logo.png" />
</head>

<body class="min-h-screen bg-cover bg-center bg-no-repeat flex flex-col"
    style="background-image: url('/images/pet-sitter.jpg');">

    <!-- Header -->
    <%- include('header', { user }) %>

        <!-- Page title -->
        <div class="bg-blue-600/90 text-white py-4">
            <div class="max-w-7xl mx-auto px-6">
                <h1 class="text-2xl font-bold">Edit Pet Sitter Profile</h1>
            </div>
        </div>

        <!-- Main -->
        <main class="flex-1 flex items-center justify-center px-4 py-10">
            <div class="bg-white/90 backdrop-blur rounded-2xl shadow-xl p-8 w-full max-w-4xl opacity-70">

                <form action="/pet_sitter/edit-profile/<%= user.user_id %>" method="POST"
                    class="grid grid-cols-1 md:grid-cols-2 gap-6">

                    <!-- FIRST NAME -->
                    <div>
                        <label class="block font-semibold mb-2">First Name</label>
                        <input type="text" name="first_name" value="<%= user.first_name %>" required
                            class="w-full border rounded px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none" />
                    </div>

                    <!-- LAST NAME -->
                    <div>
                        <label class="block font-semibold mb-2">Last Name</label>
                        <input type="text" name="last_name" value="<%= user.last_name %>" required
                            class="w-full border rounded px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none" />
                    </div>

                    <!-- PHONE -->
                    <div>
                        <label class="block font-semibold mb-2">Phone</label>
                        <input type="text" name="phone" value="<%= user.phone_number %>"
                            class="w-full border rounded px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none" />
                    </div>

                    <!-- LOCATION -->
                    <div>
                        <label class="block font-semibold mb-2">Location</label>
                        <input type="text" name="location" value="<%= user.location %>"
                            class="w-full border rounded px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none" />
                    </div>

                    <!-- BIO -->
                    <div class="md:col-span-2">
                        <label class="block font-semibold mb-2">Bio</label>
                        <textarea name="bio" rows="4" required
                            class="w-full border rounded px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none"><%= provider.bio %></textarea>
                    </div>

                    <!-- CERTIFICATIONS -->
                    <div>
                        <label class="block font-semibold mb-2">Certifications</label>
                        <input type="text" name="certifications" value="<%= provider.certifications %>"
                            class="w-full border rounded px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none" />
                    </div>

                    <!-- EXPERIENCE -->
                    <div>
                        <label class="block font-semibold mb-2">Years of Experience</label>
                        <input type="number" name="years_of_experience" min="0"
                            value="<%= provider.years_of_experience %>"
                            class="w-full border rounded px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none" />
                    </div>

                    <!-- SERVICES OFFERED -->
                    <div class="md:col-span-2">
                        <label class="block font-semibold mb-2">Services Offered</label>

                        <% const services=(provider.services_offered || '' ).split(',').map(s=> s.trim()); %>

                            <select name="services_offered[]" multiple
                                class="w-full h-40 border rounded px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none">
                                <option value="Dog_walking" <%=services.includes('Dog_walking') ? 'selected' : '' %>>Dog
                                    Walking</option>
                                <option value="Pet_boarding" <%=services.includes('Pet_boarding') ? 'selected' : '' %>
                                    >Pet Boarding</option>
                                <option value="Pet_daycare" <%=services.includes('Pet_daycare') ? 'selected' : '' %>>Pet
                                    Daycare</option>
                                <option value="Overnight_care" <%=services.includes('Overnight_care') ? 'selected' : ''
                                    %>>Overnight Care</option>
                                <option value="Drop_in_visits" <%=services.includes('Drop_in_visits') ? 'selected' : ''
                                    %>>Drop-in Visits</option>
                            </select>
                    </div>

                    <!-- PRICE -->
                    <div>
                        <label class="block font-semibold mb-2">Price per Service ($)</label>
                        <input type="number" step="0.01" min="0" name="price_per_service"
                            value="<%= provider.price_per_service %>"
                            class="w-full border rounded px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none" />
                    </div>

                    <!-- ACTION BUTTONS -->
                    <div class="md:col-span-2 flex justify-end gap-4 pt-6">
                        <a href="/pet_sitter_dashboard" class="px-5 py-2 border rounded hover:bg-gray-100 transition">
                            Cancel
                        </a>

                        <button type="submit"
                            class="bg-green-600 text-white px-6 py-2 rounded hover:bg-green-700 transition">
                            Update Profile
                        </button>
                    </div>

                </form>
            </div>
        </main>

</body>

</html>