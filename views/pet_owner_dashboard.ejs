<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Pet Sitter Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/tailwind/output.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <link rel="icon" sizes="16x16" href="/images/pawstay-logo.png">
</head>

<body class="min-h-screen bg-cover bg-center bg-no-repeat" style="background-image: url('/images/rabbit.jpg');">
    <%- include('header', { user }) %>

        <main class="max-w-6xl mx-auto p-6">

            <!-- Tabs -->
            <div class="flex justify-center sm:justify-start space-x-4 mb-6">
                <button id="tab-my-pets"
                    class="tab-btn bg-orange-500 text-white px-4 py-2 rounded-full hover:shadow-lg transition hover:-translate-y-1 font-semibold">
                    My Pets
                </button>
                <button id="tab-add-pets"
                    class="tab-btn bg-gray-100 text-gray-800 px-4 py-2 rounded-full hover:shadow-lg transition hover:-translate-y-1 font-semibold">
                    Add Pet
                </button>
                <button id="tab-bookings"
                    class="tab-btn bg-gray-100 text-gray-800 px-4 py-2 rounded-full hover:shadow-lg transition hover:-translate-y-1 font-semibold">
                    Find Pet Sitters
                </button>
            </div>

            <!-- My Pets Content -->
            <div id="content-my-pets" class="tab-content">
                <h2 class="text-2xl font-semibold mb-4 text-white">My Pets</h2>
                <% if (pets.length===0) { %>
                    <p class="text-gray-100 font-semibold">You haven’t added any pets yet.</p>
                    <% } else { %>
                        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
                            <% pets.forEach(pet=> { %>
                                <div
                                    class="bg-white/80 backdrop-blur-md border border-gray-200 p-6 rounded-2xl shadow-md hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
                                    <h3 class="text-xl font-bold text-amber-600 mb-2 border-b-3 border-amber-400 pb-1">
                                        <%= pet.pet_name %>
                                    </h3>
                                    <div class="space-y-1 text-sm text-gray-700">
                                        <p><span class="font-semibold text-gray-900">Type:</span>
                                            <%= pet.pet_type %>
                                        </p>
                                        <% if (pet.breed) { %>
                                            <p><span class="font-semibold text-gray-900">Breed:</span>
                                                <%= pet.breed %>
                                            </p>
                                            <% } %>
                                                <% if (pet.size) { %>
                                                    <p><span class="font-semibold text-gray-900">Size:</span>
                                                        <%= pet.size %>
                                                    </p>
                                                    <% } %>
                                                        <% if (pet.age !==null) { %>
                                                            <p><span class="font-semibold text-gray-900">Age:</span>
                                                                <%= pet.age %> years
                                                            </p>
                                                            <% } %>
                                    </div>
                                    <div class="mt-4 flex justify-end">
                                        <a href="/pets/<%= pet.pet_id %>/edit" title="Edit Pet"
                                            class="px-3 py-1 bg-amber-600 text-white rounded hover:bg-amber-700 transition">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <!-- Delete Button -->
                                        <form action="/pets/<%= pet.pet_id %>/delete" method="POST"
                                            onsubmit="return confirm('Are you sure you want to delete this pet?');">
                                            <button type="submit" title="Delete Pet"
                                                class="px-3 py-1 mx-2 bg-red-600 text-white rounded hover:bg-red-700 transition">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                                <% }) %>
                        </div>
                        <% } %>
            </div>

            <!-- Add Pet Content -->
            <div id="content-add-pets" class="tab-content hidden ">
                <h2 class="text-2xl font-semibold mb-4 text-white">Add Pet
                </h2>
                <section class="mt-2 bg-white p-6 rounded-lg shadow opacity-75">
                    <form action="/pets/add" method="POST" class="grid grid-cols-1 md:grid-cols-2 gap-4">

                        <!-- Pet Name -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Pet Name</label>
                            <input type="text" name="pet_name" required
                                class="mt-1 w-full rounded border border-gray-700 px-2 py-1 capitalize">
                        </div>

                        <!-- Pet Type -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Pet Type</label>
                            <select name="pet_type" required
                                class="mt-1 w-full rounded border border-gray-700 px-2 py-1">
                                <option value="dog">Dog</option>
                                <option value="cat">Cat</option>
                                <option value="exotic">Exotic</option>
                            </select>
                        </div>

                        <!-- Breed -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Breed</label>
                            <input type="text" name="breed" placeholder="Labrador Retriever, German Shepherd etc"
                                class="mt-1 w-full border rounded border-gray-700 px-2 py-1 capitalize">
                        </div>

                        <!-- Size -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Size</label>
                            <select name="size" class="mt-1 w-full rounded border border-gray-700 px-2 py-1">
                                <option value="">Select</option>
                                <option value="Small">Small</option>
                                <option value="Medium">Medium</option>
                                <option value="Large">Large</option>
                            </select>
                        </div>

                        <!-- Age -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Age</label>
                            <input type="number" name="age" min="0"
                                class="mt-1 w-full rounded border border-gray-700 px-2 py-1">
                        </div>

                        <!-- Allergies -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Allergies</label>
                            <input type="text" name="allergies"
                                class="mt-1 w-full rounded border border-gray-700 px-2 py-1">
                        </div>

                        <!-- Behavior Notes -->
                        <div class="md:col-span-2">
                            <label class="block text-sm font-medium text-gray-700">Behavior Notes</label>
                            <textarea name="behavior_notes" rows="3"
                                class="mt-1 w-full rounded border border-gray-700 px-2 py-1"></textarea>
                        </div>

                        <!-- Medical Records -->
                        <div class="md:col-span-2">
                            <label class="block text-sm font-medium text-gray-700">Medical Records</label>
                            <textarea name="medical_records" rows="3"
                                class="mt-1 w-full rounded border border-gray-700 px-2 py-1"></textarea>
                        </div>

                        <!-- Submit & Cancel Buttons -->
                        <div class="md:col-span-2 text-right space-x-2">
                            <a href="/pet-owner/dashboard"
                                class="bg-gray-500 hover:bg-gray-600 text-white px-6 py-2 rounded font-semibold">Cancel</a>
                            <button type="submit"
                                class="bg-orange-600 hover:bg-orange-700 text-white px-6 py-2 rounded font-semibold">Add
                                Pet</button>
                        </div>

                    </form>
                </section>
            </div>

            <!-- Find Pet Sitters -->
            <div id="content-bookings" class="tab-content hidden">
                <h2 class="text-2xl font-semibold mb-4 text-white">Find Pet Sitters</h2>

                <% if (providers.length===0) { %>
                    <p class="text-gray-100 font-semibold">No pet sitters available</p>
                    <% } else { %>
                        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">

                            <% providers.forEach(provider=> { %>
                                <div
                                    class="relative overflow-hidden rounded-2xl shadow-md hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
                                    <!-- Background Image -->
                                    <div class="absolute inset-0 bg-center bg-cover"
                                        style="background-image: url('<%= provider.profile_picture %>');">
                                    </div>

                                    <!-- Overlay -->
                                    <div class="absolute inset-0 bg-black/50 backdrop-blur-sm"></div>

                                    <!-- Content -->
                                    <div class="relative z-10 p-6 text-white">
                                        <h3
                                            class="text-xl font-bold text-amber-400 mb-2 border-b-2 border-amber-400 pb-1">
                                            <%= provider.first_name %>
                                                <%= provider.last_name %>
                                        </h3>

                                        <div class="space-y-1 text-sm">
                                            <p><span class="font-semibold">Bio:</span>
                                                <%= provider.bio %>
                                            </p>
                                            <p><span class="font-semibold">Certifications:</span>
                                                <%= provider.certifications %>
                                            </p>
                                            <p><span class="font-semibold">Experience:</span>
                                                <%= provider.years_of_experience %> years
                                            </p>

                                            <% if (provider.price_per_service) { %>
                                                <p><span class="font-semibold">Price:</span>
                                                    <%= provider.price_per_service %>
                                                </p>
                                                <% } %>

                                                    <% if (provider.rating !==null) { %>
                                                        <p><span class="font-semibold">Rating:</span>
                                                            <%= provider.rating %> ⭐
                                                        </p>
                                                        <% } %>

                                                            <p><span class="font-semibold">Phone:</span>
                                                                <%= provider.phone_number %>
                                                            </p>
                                                            <p><span class="font-semibold">Email:</span>
                                                                <%= provider.email %>
                                                            </p>
                                        </div>
                                    </div>

                                </div>
                                <% }) %>

                        </div>
                        <% } %>
            </div>



        </main>

        <!-- Tabs JS -->
        <script>
            const tabs = document.querySelectorAll('.tab-btn');
            const contents = document.querySelectorAll('.tab-content');

            tabs.forEach((tab, index) => {
                tab.addEventListener('click', () => {
                    // Reset all buttons
                    tabs.forEach(t => t.classList.replace('bg-orange-500', 'bg-gray-100'));
                    tabs.forEach(t => t.classList.replace('text-white', 'text-gray-800'));

                    // Hide all content
                    contents.forEach(c => c.classList.add('hidden'));

                    // Activate current tab
                    tab.classList.replace('bg-gray-100', 'bg-orange-500');
                    tab.classList.replace('text-gray-800', 'text-white');
                    contents[index].classList.remove('hidden');
                });
            });
        </script>

</body>

</html>