<head>
    <title><%= title %></title>
    <link href="/tailwind/output.css" rel="stylesheet">
    <link rel="icon" sizes="16x16" href="/images/pawstay-logo.png">
</head>

<body class="bg-gray-200 min-h-screen flex flex-col">
    <%- include('header', { user }) %>

    <main class="flex-1 flex items-center justify-center py-12">
        <div class="bg-white rounded-3xl shadow-lg w-full max-w-md p-8 text-center">
            <!-- Icon -->
            <div class="text-6xl mb-4 text-amber-500">
                <i class="fas fa-info-circle"></i>
            </div>

            <!-- Title -->
            <h1 class="text-3xl font-bold text-gray-800 mb-4"><%= title %></h1>

           

            <!-- Back Home / Dashboard button -->
            <a href="<%= backUrl || '/' %>" 
               class="inline-block bg-amber-500 hover:bg-amber-600 text-white font-semibold px-6 py-3 rounded-lg transition">
                Go Back
            </a>
        </div>
    </main>

    <!-- FontAwesome -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
</body>
