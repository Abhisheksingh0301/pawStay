<head>
    <title>
        <%= title %>
    </title>
    <link href="/tailwind/output.css" rel="stylesheet">
    <link rel="icon" sizes="16x16" href="/images/pawstay-logo.png">
</head>
<div class="relative min-h-screen w-full">
    <!-- Back to Home -->
    <a href="/" class="absolute top-6 left-6 z-20 flex items-center gap-2
          bg-white/80 backdrop-blur-md px-4 py-2 rounded-full
          text-gray-700 font-medium shadow
          hover:bg-white transition">
        ‚Üê Back to Home
    </a>

    <!-- Full-page background image -->
    <div class="absolute inset-0 bg-cover bg-center w-full" style="background-image: url('/images/123.jpg');"></div>

    <!-- Right-side form container -->
    <div class="relative z-10 flex items-center justify-end min-h-screen pr-8 opacity-75">
        <div class="bg-white/80 backdrop-blur-md w-full max-w-md p-8 rounded-lg shadow-lg">

            <h2 class="text-2xl font-bold text-center mb-6 text-gray-700">
                <%= title %>
            </h2>

            <form action="/login" method="post" class="space-y-4">

                <div>
                    <label class="block text-sm font-medium text-gray-700">Email</label>
                    <input type="email" name="txtemail" required autocomplete="off" value="" placeholder="Email Id"
                        class="mt-1 w-full p-2 border border-gray-500 rounded-md focus:border-blue-500 focus:ring-1 focus:ring-blue-500">
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700">Password</label>
                    <input type="password" name="txtpwd" required
                        class="mt-1 w-full p-2 border border-gray-500 rounded-md focus:border-blue-500 focus:ring-1 focus:ring-blue-500">
                </div>

                <div>
                    <button type="submit" class="w-full bg-blue-500 hover:bg-blue-600 text-white py-2 rounded-lg mt-2">
                        Login
                    </button>
                    <div class="text-right">
                        <a href="/signup" class="text-blue-500 hover:underline">Don't have an account? Sign Up</a>
                    </div>
                </div>

            </form>

        </div>
    </div>

</div>